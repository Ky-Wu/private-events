<h1> Create new Event </h1>

<%= form_for(@event) do |f| %>

  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :location %>
  <%= f.text_field :location %>

  <%= f.label :date %>
  <%= f.date_field :date %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.submit "Create event" %>

<% end %>
